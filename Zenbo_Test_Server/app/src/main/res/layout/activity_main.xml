<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/ReceiveMessage"
        android:layout_width="366dp"
        android:layout_height="295dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Hello World!" />

    <LinearLayout
        android:id="@+id/Instruction_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="120dp"
            android:layout_marginStart="50dp"
            android:text="Instruction :"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/instruction_type"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="response_table">
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/table_id_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Instruction_line"
        android:layout_centerVertical="true">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="120dp"
            android:layout_marginStart="50dp"
            android:text="table_id :"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/table_id"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="0">
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/x_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/table_id_line"
        android:layout_centerVertical="true">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="120dp"
            android:layout_marginStart="50dp"
            android:text="X :"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/x"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="0">
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/y_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/x_line"
        android:layout_centerVertical="true">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="120dp"
            android:layout_marginStart="50dp"
            android:text="Y :"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/y"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="0">
        </EditText>
    </LinearLayout>

    <Button
        android:id="@+id/btn_send"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/y_line"
        android:text="Send">
    </Button>

</RelativeLayout>